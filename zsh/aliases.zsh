
# ALIASES                                                             

# ZELLIJ ALIASES
alias Z="zellij"
alias ZJ="zellij --layout ~/.config/zellij/layouts/janus.kdl"
alias ZTR="zellij --layout ~/.config/zellij/layouts/three.kdl"

# VIM ALIASES
alias vmd="nvim"
alias vm="nvim ."

# SHELL ALIASES
alias zshrc="nvim ~/.zshrc"
alias zshal="nvim ~/.oh-my-zsh/custom/aliases.zsh"

# LAZY ALIASES
alias lg="lazygit"
alias ldd="lazydocker"

# PNPM ALIASES
alias pm="pnpm"
alias pmu="pnpm up"
alias pmi="pnpm i"
alias pma="pnpm add"
alias pmb="pnpm run build"
alias pmd="pnpm run dev"
alias pmg="pnpm start"
alias pmr="pnpm store prune"
alias pmx="pnpm exec"
alias pmv="curl -fsSL https://get.pnpm.io/install.sh | sh -s"

# DOCKER ALIASES
alias docker-up="open /Applications/Docker.app"
alias dci="docker container init"
